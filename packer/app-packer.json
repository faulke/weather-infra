{
  "variables": {
    "aws_access_key": null,
    "aws_secret_key": null,
    "ami": "{{env `AMI`}}",
    "version": "{{env `VERSION`}}"
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-west-2",
    "source_ami": "{{user `ami`}}",
    "instance_type": "t2.micro",
    "ssh_username": "ec2-user",
    "ami_name": "Weather-{{user `version`}}",
    "tags": {
      "Name": "Weather-{{user `version`}}",
      "Version": "{{user `version`}}"
    }
  }]
}
